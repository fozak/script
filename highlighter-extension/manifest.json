{
  "manifest_version": 3,
  "name": "Text Annotator",
  "version": "1.0",
  "description": "Add notes to selected text with persistent highlighting",
  
  "permissions": [
    "contextMenus",
    "storage",
    "activeTab",
    "scripting",
    "downloads",
    "tabs"
  ],
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Text Annotator"
  }
}