{
    "manifest_version": 3,
    "name": "Dynamic JavaScript Executor",
    "version": "1.0",
    "description": "Execute JavaScript code from a textarea.",
    "permissions": [
        "activeTab"
    ],
    "action": {
        "default_popup": "content.html",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["content.js"]
    }]
}